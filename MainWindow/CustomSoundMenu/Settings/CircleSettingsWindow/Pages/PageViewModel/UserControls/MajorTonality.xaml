<UserControl x:Class="MusicCircle.Settings.CircleSettingsWindow.Pages.PageViewModel.UserControls.MajorTonality"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicCircle.Settings.CircleSettingsWindow.Pages.PageViewModel.UserControls"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <Style x:Key="GeneralStyle" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="3 0 3 0"/>
        </Style>
    </UserControl.Resources>
    
    <StackPanel>
        <StackPanel Background="White" Orientation="Horizontal">
            <TextBlock Style="{StaticResource GeneralStyle}"> Временный текст </TextBlock>
            <TextBox   Style="{StaticResource GeneralStyle}" Width="150"> Временный текст</TextBox>
            <TextBox   Style="{StaticResource GeneralStyle}" Width="200">Временный текст</TextBox>
            <Button    Style="{StaticResource GeneralStyle}">Картинка</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
